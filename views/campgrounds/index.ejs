<%- include("../partials/header")  %>

<div class="container my-5">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary " href="/campgrounds/new">Add a new Campground</a>
            </p>
        </div>
    </header>

    <!-- row has already display set to flex -->
    <div class="row text-center mb-5 align-items-center">
        <div class="col-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>

        <% campgrounds.forEach(campground => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 ">
            <div class="img-thumbnail">
                <img class="w-100 img-fluid" src="<%= campground.image %> " alt="image">
                <div class="my-2">
                    <strong><%= campground.name %></strong>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }) %>

        <%  if (token) { %>
        <iframe class="collapse" id="chat" src="<%= token %> "></iframe>
        <% } %>


        <a id="chatbtn" class="btn btn-primary" data-toggle="collapse" href="#chat" role="button" aria-expanded="false"
            aria-controls="collapseExample">
            <span class="px-3">Chat-Bot</span>
        </a>

    </div>

</div>



<%- include("../partials/footer")  %>