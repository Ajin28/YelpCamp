<%- include("../partials/header")  %>

<div class="container">
    <div class="row">
        <div class="col-12 mx-auto">

            <h1 class="text-center mt-5">Edit Comment </h1>

            <div class="mx-auto my-3" style="width:50% ;">
                <form action="/campgrounds/<%= campground_id  %>/comments/<%= comment._id %>?_method=PUT" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %> ]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" stype="submit">Submit</button>
                    </div>
                </form>

                <a href="/campgrounds">Back</a>
            </div>
        </div>
    </div>
</div>
